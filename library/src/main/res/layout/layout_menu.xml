<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <io.github.iamvaliyev.multitabmenu.coverflow.FancyCoverFlow
                android:id="@+id/slCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/pd"
                android:layout_marginTop="3dp"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                app:actionDistance="10"
                app:maxRotation="0"
                app:scaleDownGravity="1.0"
                app:unselectedAlpha="1.0"
                app:unselectedSaturation="1.0"
                app:unselectedScale="1.0" />

        </LinearLayout>


        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln">

            <io.github.iamvaliyev.multitabmenu.coverflow.FancyCoverFlow
                android:id="@+id/slSubCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                app:actionDistance="10"
                app:maxRotation="0"
                app:scaleDownGravity="1.0"
                app:unselectedAlpha="1.0"
                app:unselectedSaturation="1.0"
                app:unselectedScale="1.0" />

            <io.github.iamvaliyev.multitabmenu.widgets.TriangleShapeView
                android:id="@+id/triangle"
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_gravity="center_horizontal" />

        </FrameLayout>

    </RelativeLayout>
</LinearLayout>